style "workspace-switcher"
{
xthickness 		= 3
ythickness 		= 3

	bg[NORMAL]   = #ff0000
	bg[SELECTED] = shade (1.0, @selected_bg_color)
	bg[PRELIGHT] = shade (1.2, @selected_bg_color)
}

