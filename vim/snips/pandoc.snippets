extends markdown
extends pandoc

snippet meta "Pandoc standard metadata" b
---
title:
 -  ${1:`v vim_snippets#Filename('$1', 'title')`}
subtitle: |
 |  ${2:subject}
 |  ${3:subject sub}
author:
 -  ${4:`!v g:snips_author`}
institute:
 -  $^1$Universidad de Guanajuato
logo:
 -  img/escudo.jpg
theme:
 -  metropolis
date:
 -  \today
documentclass: article
numbersections: false
toc: false
lang: es-MX
geometry:
 -  margin=1in
monofont:
 -  Source Code Pro
abstract:
 -  ${5:abstract}
---
$0
endsnippet

snippet metatex "Pandoc metadata for include header." b
header-includes: |
    \usepackage{tikz}
    \usepackage{mathtools}
    \usepackage{amsmath}
    \usepackage{amssymb}
    \usepackage{float}
    \usepackage[ruled,vlined,linesnumbered]{algorithm2e}
    \floatplacement{figure}{H}
    \newcommand{\ba}{\backslash}
    \newcommand{\ve}{\varepsilon}
    \newcommand{\es}{\emptyset}
    \newcommand{\lra}[1]{{\langle}{#1}{\rangle}}
    \newcommand{\setc}[1]{{#1}^{\mathsf{c}}}
    \newcommand{\mbb}[1]{\mathbb{#1}}
    \newcommand{\mbf}[1]{\mathbf{#1}}
    \newcommand{\mif}[1]{\mathit{#1}}
    \newcommand{\mcal}[1]{\mathcal{#1}}
    \newcommand{\mfrak}[1]{\mathfrak{#1}}
endsnippet

