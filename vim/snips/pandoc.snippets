snippet mtcl "Caligraphy latex math."
\mathcal{${1:${VISUAL}}}
endsnippet

snippet mtbb "Nice latex math."
\mathbb{${1:${VISUAL}}}
endsnippet

snippet mtbf "Bold latex."
\mathbf{${1:${VISUAL}}}
endsnippet

snippet mtfr "Fraction for latex"
\frac{${1:1}}{${2:2}}$0
endsnippet

snippet mtsu "Superior-Inferior command for latex"
\${1:sum}_{${2:i=0}}^{${3:N}}{${4:x}}
endsnippet

snippet mtbeb "Begin-End block latex math"
\begin{${1:aligned}}
    ${2:${VISUAL}}
\end{$1}
endsnippet

snippet mtlri "Left-Right math block inlined"
\left${1:(}${3:${VISUAL}}\right${2:)}$0
endsnippet

snippet mtlr "Left-Right math block"
\left${1:(}
    ${3:${VISUAL}}
\right${2:)}
endsnippet

snippet cmmt "Comment."

[//]: # (${1:${VISUAL}})

endsnippet

snippet mtb "Math block of LaTeX" b
$$
    ${1:${VISUAL}}
$$
$0
endsnippet

snippet irc "Code block inline run."
\`${1:x**2}\`.{run}
endsnippet

snippet mtbei "Begin-End block latex inlined"
\begin{${1:aligned}}$2\end{$1}
endsnippet

snippet cdb "Code block."
\`\`\`{${1:.julia}}
$2
\`\`\`
$0
endsnippet

snippet cdbplt "Code block for pandoc-plot." b
\`\`\`{.matplotlib dpi=300 caption="${1:Image description.}"}
import numpy as np
import matplotlib.pyplot as plt

def f(x):
    ${2:return x**2}
$0
x = np.arange(-5, 5, 0.1)
y = f(x)

plt.figure()
plt.plot(x,y)
\`\`\`
endsnippet

snippet cdbdot "Code block for dot images."
\`\`\`{.dot caption="${1:Dot image.}" scale=1.0}
digraph ${2:graph} {
    rankdir=TD
    A [texlbl="$\alpha$"]
    B [texlbl="$\beta$"]

    A -> B
}
\`\`\`
endsnippet
